// This is your Prisma schema file,
// learn more about it in the docs: https://pris.ly/d/prisma-schema

generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "mongodb"
  url      = env("DATABASE_URL")
}

enum Permission{
  ADMIN
  USER
}

model User{
  id String @id @default(auto()) @map("_id") @db.ObjectId
  email String @unique
  password String
  permission Permission @default(USER)
}

model Products{
  id String @id @default(auto()) @map("_id") @db.ObjectId
  name String
  stock Int
  price Float
  description String
  available Boolean
  // because i decide to use prisma, i will use a string as an array
  tags String
  images Json?
}

model Tags {
  id String @id @default(auto()) @map("_id") @db.ObjectId
  name String
}

model Sales{
  id String @id @default(auto()) @map("_id") @db.ObjectId
  id_user String
  id_products String
  details String
  amount Float
}